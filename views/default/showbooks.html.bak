{{extend 'layout.html'}}
<h1>
    &nbsp;
</h1>
<h1>
    &nbsp;
</h1>
<h1 style="font-size:30px;text-align:center;text-shadow: 1px 1px 1px #000000;">Books</h1>
<div class="center">
<button class="button" src="{{=URL('default','searchbooks')}}">
    Search Books
</button>
</div>
<div class="hehe">
<table style="font-size:20px" class="table">
    <tr class="first">
            <td>Book Image</td>
            <td>Book Name</td>
            <td>Book Type</td>
            <td>Created On</td>
    </tr>
    {{for book in books:}}
        <tr class="sec">
            <td>
                <span class="tinyimg">
                    <img width="100px" height="130px"; src="http://127.0.0.1:8000/Newrs/appadmin/download/db/{{=book.book_image}}"/>
                </span>
            </td>
            <td><a href="{{=URL('default','show',args=book.id)}}">{{=book.title}}</a></td>
            <td>{{=book.classi}}</td>
            <td>{{=book.created_on}}</td>
        </tr>
    {{pass}}
</table>
</div>
